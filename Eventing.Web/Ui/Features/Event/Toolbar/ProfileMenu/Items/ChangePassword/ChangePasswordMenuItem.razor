@using Eventing.Web.Ui.Features.Event.Toolbar.ProfileMenu.Items.ChangePassword.Dialog
@inject IDialogService DialogService

<MudMenuItem Label="Change password" Icon="@Icons.Material.Filled.Password" OnClick="@OpenPasswordUpdateDialogAsync"/>

@code {

    private Task OpenPasswordUpdateDialogAsync()
    {
        var options = new DialogOptions
        {
            BackdropClick = true, CloseOnEscapeKey = true, CloseButton = true, FullWidth = true,
        };

        return DialogService.ShowAsync<ChangePasswordDialog>("Change Password", options);
    }

}