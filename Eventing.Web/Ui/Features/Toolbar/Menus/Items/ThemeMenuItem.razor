@using Eventing.Web.States
@inject ThemeInfo ThemeInfo

<MudMenuItem Label="@ButtonLabel" Icon="@ButtonIcon" OnClick="@ThemeInfo.ToggleDarkMode" AutoClose="false"/>

@code {

    private string ButtonIcon => ThemeInfo.IsDarkMode switch
    {
        true => Icons.Material.Rounded.DarkMode,
        false => Icons.Material.Outlined.LightMode,
    };

    private string ButtonLabel => ThemeInfo.IsDarkMode switch
    {
        true => "Dark",
        false => "Light",
    };

}