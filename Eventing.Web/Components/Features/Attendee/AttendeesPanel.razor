<MudDrawerHeader>
    <MudText Typo="Typo.h6">Attendees</MudText>
</MudDrawerHeader>


<MudList>
    @if (Attendees.Any())
    {
        @foreach (var a in Attendees)
        {
            <MudListItem>
                <AvatarContent>
                    <MudAvatar Size="Size.Medium">@Utils.GetInitials(a.Responder.Name)</MudAvatar>
                </AvatarContent>
                <ChildContent>
                    @a.Responder.Name
                </ChildContent>
            </MudListItem>
        }
    }
    else
    {
        <MudListItem>
            <MudText>No attendees</MudText>
        </MudListItem>
    }
</MudList>