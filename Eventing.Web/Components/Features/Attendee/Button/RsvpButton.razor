@using Eventing.Web.Components.Features.Attendee.Enums
<MudToggleGroup T="RsvpResponse" @bind-Value="@RsvpResponse" CheckMark="true" Style="width: 22rem">
    <MudToggleItem Value="@RsvpResponse.Accepted"
                   SelectedIcon="@Icons.Material.Filled.CheckCircle"
                   UnselectedIcon="@Icons.Material.Outlined.CheckCircle"
                   Text="Accept">
    </MudToggleItem>
    <MudToggleItem Value="@RsvpResponse.Declined"
                   SelectedIcon="@Icons.Material.Filled.Cancel"
                   UnselectedIcon="@Icons.Material.Outlined.Cancel"
                   Text="Decline" >
    </MudToggleItem>
    <MudToggleItem Value="@RsvpResponse.Maybe"
                   SelectedIcon="@Icons.Material.Filled.Help"
                   UnselectedIcon="@Icons.Material.Outlined.HelpOutline"
                   Text="Maybe">
    </MudToggleItem>
</MudToggleGroup>